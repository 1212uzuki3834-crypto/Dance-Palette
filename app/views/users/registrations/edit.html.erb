<div class="edit-profile-wrapper">
  <h1 class="edit-profile-title">Edit Profile</h1>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name),
               html: { method: :put, class: "edit-profile-form" }) do |f| %>

    <%= render "users/shared/error_messages", resource: resource %>

    <!-- Name -->
    <div class="field">
      <%= f.label :name, "Name" %><br />
      <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-input" %>
    </div>

    <!-- Image -->
    <div class="field">
      <%= f.label :image, "Image" %><br />
      <%= f.file_field :image, class: "form-input" %>
    </div>

    <!-- Profile -->
    <div class="field">
      <%= f.label :profile, "Profile" %><br />
      <%= f.text_area :profile, class: "form-input form-textarea" %>
    </div>

    <!-- Email -->
    <div class="field">
      <%= f.label :email, "Email" %><br />
      <%= f.email_field :email, autocomplete: "email", class: "form-input" %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div class="reconfirm">
        Currently waiting confirmation for: <%= resource.unconfirmed_email %>
      </div>
    <% end %>

    <!-- Password -->
    <div class="field">
      <%= f.label :password, "Password (leave blank if you don't want to change it)" %><br />
      <%= f.password_field :password, autocomplete: "new-password", class: "form-input" %>

      <% if @minimum_password_length %>
        <div class="edit-hint"><%= @minimum_password_length %> characters minimum</div>
      <% end %>
    </div>

    <!-- Password confirmation -->
    <div class="field">
      <%= f.label :password_confirmation, "Password confirmation" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-input" %>
    </div>

    <!-- Current password -->
    <div class="field">
      <%= f.label :current_password, "Current password (we need your current password to confirm your changes)" %><br />
      <%= f.password_field :current_password, autocomplete: "current-password", class: "form-input" %>
    </div>

    <!-- ボタン(ここだけでOK) -->
    <div class="actions action-buttons">
      <%= f.submit "Update", class: "form-btn" %>
      <%= link_to "Back", mypage_path, class: "form-btn back-btn" %>
    </div>

  <% end %>
</div>
